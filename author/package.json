  },
  "scripts": {
  
    "clean": "rm -rf www",
    "build": "ionic-app-scripts build",
    "serve": "ionic-app-scripts serve",

    "export": "cp -r www/* ../ui.content/src/main/resources/jcr_root/etc/author; rm ../ui.content/src/main/resources/jcr_root/etc/author/index.html",
    "export-browser": "cp -r platforms/browser/www/* ../ui.content/src/main/resources/jcr_root/etc/author; rm ../ui.content/src/main/resources/jcr_root/etc/author/index.html",
        
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve"
    
  },
